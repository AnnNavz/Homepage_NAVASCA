@page "/"
@model Homepage_NAVASCA.Pages.LoginModel
@{
    Layout = "~/Pages/Shared/Login_Layout.cshtml";
    ViewData["Title"] = "Welcome Back";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
</div>

<form method="post" class="user">
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

    <div class="mb-3">
        <input type="email" asp-for="users.Email" class="form-control form-control-user" placeholder="Enter Email Address...">
        <span asp-validation-for="users.Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <input type="text" asp-for="users.Username" class="form-control form-control-user" placeholder="Username">
        <span asp-validation-for="users.Username" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <input type="password" asp-for="users.Password" class="form-control form-control-user" placeholder="Password">
        <span asp-validation-for="users.Password" class="text-danger small"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-login fw-bold text-uppercase">
            Login
        </button>
    </div>
</form>

<hr>

<div class="text-center">
    <p class="small mb-0">Don't have an account? <a href="#">Create one!</a></p>
</div>